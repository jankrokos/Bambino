<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bambino" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green80</item>
        <item name="colorOnPrimary">@color/green20</item>
        <item name="colorPrimaryContainer">@color/green30</item>
        <item name="colorOnPrimaryContainer">@color/green90</item>
        <item name="colorPrimaryInverse">@color/green40</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_green80</item>
        <item name="colorOnSecondary">@color/dark_green20</item>
        <item name="colorSecondaryContainer">@color/dark_green30</item>
        <item name="colorOnSecondaryContainer">@color/dark_green90</item>

        <!-- Tertiary -->
        <item name="colorTertiary">@color/violet80</item>
        <item name="colorOnTertiary">@color/violet20</item>
        <item name="colorTertiaryContainer">@color/violet30</item>
        <item name="colorOnTertiaryContainer">@color/violet90</item>

        <!-- Error -->
        <item name="colorError">@color/red80</item>
        <item name="colorOnError">@color/red20</item>
        <item name="colorErrorContainer">@color/red30</item>
        <item name="colorOnErrorContainer">@color/red90</item>

        <!-- Background and surface -->
        <item name="background">@color/grey10</item>
        <item name="colorOnBackground">@color/grey90</item>
        <item name="colorSurface">@color/green_grey30</item>
        <item name="colorOnSurface">@color/green_grey80</item>
        <item name="colorSurfaceInverse">@color/grey90</item>
        <item name="colorOnSurfaceInverse">@color/grey10</item>
        <item name="colorSurfaceVariant">@color/green_grey30</item>
        <item name="colorOnSurfaceVariant">@color/green_grey80</item>

        <item name="colorOutline">@color/green_grey80</item>



        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <!-- Customize your theme here. -->
    </style>
</resources>