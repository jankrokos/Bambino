<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bambino" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green40</item>
        <item name="colorOnPrimary">#fff</item>
        <item name="colorPrimaryContainer">@color/green90</item>
        <item name="colorOnPrimaryContainer">@color/green10</item>
        <item name="colorPrimaryInverse">@color/green80</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_green40</item>
        <item name="colorOnSecondary">#fff</item>
        <item name="colorSecondaryContainer">@color/dark_green90</item>
        <item name="colorOnSecondaryContainer">@color/dark_green10</item>

        <!-- Tertiary -->
        <item name="colorTertiary">@color/violet40</item>
        <item name="colorOnTertiary">#fff</item>
        <item name="colorTertiaryContainer">@color/violet90</item>
        <item name="colorOnTertiaryContainer">@color/violet10</item>

        <!-- Error -->
        <item name="colorError">@color/red40</item>
        <item name="colorOnError">#fff</item>
        <item name="colorErrorContainer">@color/red90</item>
        <item name="colorOnErrorContainer">@color/red10</item>

        <!-- Background and surface -->
        <item name="background">@color/grey99</item>
        <item name="colorOnBackground">@color/grey10</item>
        <item name="colorSurface">@color/green_grey90</item>
        <item name="colorOnSurface">@color/green_grey30</item>
        <item name="colorSurfaceInverse">@color/grey20</item>
        <item name="colorOnSurfaceInverse">@color/grey95</item>
        <item name="colorSurfaceVariant">@color/green_grey90</item>
        <item name="colorOnSurfaceVariant">@color/green_grey30</item>

        <item name="colorOutline">@color/green_grey50</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">#000</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_baseline_child_care_24</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">200</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.Bambino</item>
    </style>

</resources>